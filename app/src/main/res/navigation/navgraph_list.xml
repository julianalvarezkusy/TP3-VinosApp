<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph_list"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.vinos_app.fragments.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_DetailsFragment"
            app:destination="@id/DetailsFragment" >
            <argument
                android:name="wineName"
                android:defaultValue="0" />
        </action>
        <action
            android:id="@+id/action_listFragment_to_optionsUserFragment"
            app:destination="@id/optionsUserFragment" />
        <action
            android:id="@+id/action_listFragment_to_addWineFragment"
            app:destination="@id/addWineFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.example.vinos_app.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="wineName"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_DetailsFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionsUserFragment"
        android:name="com.example.vinos_app.fragments.OptionsUserFragment"
        android:label="OptionsUserFragment" >
        <action
            android:id="@+id/action_optionsUserFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
        <action
            android:id="@+id/action_optionsUserFragment_to_favouritesListFragment"
            app:destination="@id/favouritesListFragment" />
        <action
            android:id="@+id/action_optionsUserFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.vinos_app.activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/favouritesListFragment"
        android:name="com.example.vinos_app.fragments.FavouritesListFragment"
        android:label="fragment_favourites_list"
        tools:layout="@layout/fragment_favourites_list" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.vinos_app.fragments.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/addWineFragment"
        android:name="com.example.vinos_app.fragments.AddWineFragment"
        android:label="fragment_add_wine"
        tools:layout="@layout/fragment_add_wine" >
        <action
            android:id="@+id/action_addWineFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>